<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cu.editorialoriente.catalogo.Nosotros"
    tools:showIn="@layout/nosotros_actividad"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nosotros_texto"
        android:textSize="@dimen/textsize_nosotros"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://editorialoriente.wordpress.com"
        android:textSize="@dimen/textsize_nosotros"
        android:id="@+id/wordpress"
        android:layout_gravity="center"
        />
        <Button
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/wordpres"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VISITAR"
            android:padding="12dp"
            android:textColor="@color/colorBlanco"
            android:backgroundTint="@color/colornegro_900"
            android:id="@+id/btnwpress"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://editorialoriente.cubava.cu"
        android:textSize="@dimen/textsize_nosotros"
        android:id="@+id/cubava"

        />
        <Button
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/reflejos"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VISITAR"
            android:padding="12dp"
            android:textColor="@color/colorBlanco"
            android:backgroundTint="@color/colornegro_900"
            android:id="@+id/btncubava"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.facebook.com/editorialoriente.scu/"
        android:textSize="@dimen/textsize_nosotros"
        android:id="@+id/facebook"

        />

        <Button
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/facebook"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VISITAR"
            android:padding="12dp"
            android:textColor="@color/colorBlanco"
            android:backgroundTint="@color/colornegro_900"
            android:id="@+id/btnwface"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://twitter.com/editorialorient"
        android:textSize="@dimen/textsize_nosotros"
        android:id="@+id/twitter"

        />
        <Button
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/twitter"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VISITAR"
            android:padding="12dp"
            android:textColor="@color/colorBlanco"
            android:backgroundTint="@color/colornegro_900"
            android:id="@+id/btntweet"
            />
        </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
