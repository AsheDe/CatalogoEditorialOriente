<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cu.editorialoriente.catalogo.Detalle_Libro_Actividad"
    tools:showIn="@layout/detalle__libro__actividad"
    android:background="@color/colorBlanco"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenedor_titulo"
            android:background="@color/colornegro_300"
            android:transitionName="libro_titulo_contenedor"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_titulo_libro"
                android:textColor="@color/colorBlanco"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:minHeight="60dp"
                android:gravity="bottom"
                android:transitionName="libro_titulo"
                android:elevation="8dp"
                />

        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:id="@+id/engloba_autor"
        >
    <ImageView
        android:layout_width="@dimen/avatar_autor"
        android:layout_height="@dimen/avatar_autor"
        android:id="@+id/avatar_autor"
        android:scaleType="fitXY"
        android:transitionName="avatar_autor"
        android:layout_marginLeft="24dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_autor"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colornegro_900"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:transitionName="libro_autor"
            android:layout_marginRight="16dp"

            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:id="@+id/liner2doautor"

            >
            <ImageView
                android:layout_width="@dimen/avatar_autor"
                android:layout_height="@dimen/avatar_autor"
                android:id="@+id/avatar_autor1"
                android:scaleType="fitXY"
                android:layout_marginLeft="24dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_autor1"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/colornegro_900"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:transitionName="libro_autor"
                android:layout_marginRight="16dp"
                />
        </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±o: 2017"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colornegro_300"
            android:id="@+id/text_year"
            />


           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/colornegro_50"
               android:layout_marginTop="4dp"
               android:layout_marginBottom="4dp"
               android:layout_gravity="center"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="$10.00 "
               android:layout_gravity="center"
               android:textAppearance="@android:style/TextAppearance.Medium"
               android:textColor="@color/colorAzul"
               android:id="@+id/text_price"

               />


           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/colornegro_50"
               android:layout_marginTop="4dp"
               android:layout_marginBottom="4dp"
               android:layout_gravity="center"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:id="@+id/existprice"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icorazonnegro"
               android:layout_gravity="center"
               android:transitionName="megusta"
               android:id="@+id/megusta"
               />

           </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colornegro_300"
            android:id="@+id/text_isbn"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="isbn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_sinopsis"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_genero"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_coleccion"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colornegro_300"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otros_titulos_coleccion"
            android:text="Relacionados"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulos_relacionados"
            />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>
